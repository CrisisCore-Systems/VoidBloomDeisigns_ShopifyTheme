{
  "name": "voidbloom-shopify",
  "version": "1.0.0",
  "description": "VoidBloom Designs - Cyberpunk-Inspired Digital Fashion & Tech Accessories",
  "main": "index.js",
  "scripts": {
    "start": "shopify theme dev",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development --watch",
    "lint": "eslint 'src/**/*.js' && stylelint 'src/**/*.css'",
    "format": "prettier --write '**/*.{js,json,css,scss,liquid}'",
    "check": "shopify theme check",
    "deploy:dev": "shopify theme push --theme=development",
    "deploy:prod": "shopify theme push --theme=production",
    "assets:optimize": "node scripts/optimize-images.js",
    "build:glitch": "node scripts/generate-glitch-assets.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["shopify", "cyberpunk", "voidbloom", "ecommerce", "digital-fashion"],
  "author": "VoidBloom Designs",
  "license": "ISC",
  "devDependencies": {
    "@shopify/eslint-plugin": "^47.0.1",
    "@shopify/prettier-config": "^1.1.2",
    "@shopify/stylelint-plugin": "^15.0.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "css-loader": "^6.9.1",
    "eslint": "^8.57.1",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "postcss-import": "^16.0.1",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.5.2",
    "stylelint": "^16.14.1",
    "tailwindcss": "^4.0.9",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@fontsource/rajdhani": "^5.1.1",
    "@fontsource/share-tech-mono": "^5.1.1",
    "@babel/runtime": "^7.24.0"
  }
}