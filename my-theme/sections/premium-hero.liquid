<div class="premium-hero relative min-h-screen overflow-hidden bg-void" 
     data-premium-hero
     data-scroll-reveal>
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-cyber-grid opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-neon-pink/10 to-transparent"></div>
    
    <div class="floating-elements" data-floating-elements>
      {% for i in (1..5) %}
        <div class="premium-float" style="--animation-delay: {{ i | times: 0.5 }}s;"></div>
      {% endfor %}
    </div>
  </div>

  <div class="relative container mx-auto px-4 pt-32 pb-16">
    <h1 class="premium-text text-6xl md:text-8xl font-bold mb-6" 
        data-parallax-element
        data-parallax-speed="0.2"
        data-scroll-reveal="fade-up">
      {{ section.settings.heading }}
    </h1>
    {% if section.settings.subheading != blank %}
      <p class="text-neon-blue/80 text-xl md:text-2xl mb-8" 
         data-parallax-element
         data-parallax-speed="0.3"
         data-scroll-reveal="fade-up"
         data-scroll-delay="200">
        {{ section.settings.subheading }}
      </p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Premium Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Premium Experience"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "presets": [
    {
      "name": "Premium Hero",
      "category": "Hero Sections"
    }
  ]
}
{% endschema %}
