<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="{{ 'fonts.css' | asset_url }}" rel="stylesheet">
{%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
  <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
{%- endunless -%}

<link rel="preload" as="font" href="{{ settings.type_header_font | font_url }}" type="font/woff2" crossorigin>
<link rel="preload" as="font" href="{{ settings.type_body_font | font_url }}" type="font/woff2" crossorigin>

<style>
  @font-face {
    font-family: {{ settings.type_header_font.family }};
    font-weight: {{ settings.type_header_font.weight }};
    font-style: {{ settings.type_header_font.style }};
    font-display: swap;
    src: url({{ settings.type_header_font | font_url }}) format("woff2");
  }

  @font-face {
    font-family: {{ settings.type_body_font.family }};
    font-weight: {{ settings.type_body_font.weight }};
    font-style: {{ settings.type_body_font.style }};
    font-display: swap;
    src: url({{ settings.type_body_font | font_url }}) format("woff2");
  }
</style>
