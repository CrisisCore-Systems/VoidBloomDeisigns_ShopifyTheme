<!DOCTYPE html>
<html lang="{{ shop.locale }}" class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.background_primary }}">
  <link rel="canonical" href="{{ canonical_url }}">

  <title>
    {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <!-- Favicon -->
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&family=Orbitron:wght@400;500;600;700&family=Share+Tech+Mono&display=swap" rel="stylesheet">
  
  <!-- CSS -->
  {{ 'main.scss' | asset_url | stylesheet_tag }}
  
  <!-- Theme settings -->
  <script>
    window.theme = window.theme || {};
    window.theme = {
      settings: {
        primary_color: {{ settings.primary_color | json }},
        secondary_color: {{ settings.secondary_color | json }},
        accent_color: {{ settings.accent_color | json }},
        layout_width: {{ settings.layout_width | json }},
        animations_enabled: {{ settings.animations_enabled | json }}
      },
      strings: {
        addToCart: {{ 'products.product.add_to_cart' | t | json }},
        soldOut: {{ 'products.product.sold_out' | t | json }},
        unavailable: {{ 'products.product.unavailable' | t | json }}
      },
      moneyFormat: {{ shop.money_format | json }}
    };
    document.documentElement.className = document.documentElement.className.replace('no-js', '');
  </script>
  
  <!-- Scripts -->
  <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>

  <!-- Additional scripts -->
  {{ content_for_header }}
</head>

<body class="cyberpunk-theme template-{{ template.name | handle }} {{ template.suffix }}">
  <div class="noise-overlay" aria-hidden="true"></div>
  <div class="glitch-lines" aria-hidden="true"></div>
  
  {% section 'announcement' %}
  {% section 'header' %}
  
  <main id="MainContent" role="main" class="main-content" tabindex="-1">
    {{ content_for_layout }}
  </main>
  
  {% section 'footer' %}
  
  <!-- Cart drawer -->
  {% section 'cart-drawer' %}
  
  <!-- Modals -->
  {% section 'popups' %}
</body>
</html>