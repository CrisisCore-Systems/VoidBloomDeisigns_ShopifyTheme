<div class="cart-flyout js-cart-flyout">
  <div class="cart-flyout__header">
    <h2 class="cart-flyout__title">{{ 'cart.title' | t }}</h2>
    <button class="cart-flyout__close js-cart-flyout-close">
      <span class="icon icon-close">âœ•</span>
    </button>
  </div>
  
  <div class="cart-flyout__body">
    {% if cart.item_count > 0 %}
      <div class="cart-flyout__items">
        {% for item in cart.items %}
          {% render 'cart-item', item: item %}
        {% endfor %}
      </div>
      
      <div class="cart-flyout__footer">
        <div class="cart-flyout__subtotal">
          <span>{{ 'cart.subtotal' | t }}</span>
          <span>{{ cart.total_price | money }}</span>
        </div>
        
        <a href="{{ routes.cart_url }}" class="btn">
          {{ 'cart.view_cart' | t }}
        </a>
        
        <button class="btn btn--primary js-checkout-button">
          {{ 'cart.checkout' | t }}
        </button>
      </div>
    {% else %}
      <div class="cart-flyout__empty">
        <p>{{ 'cart.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn">
          {{ 'cart.continue_shopping' | t }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% style %}
  /* Replace the stylesheet_tag line with these styles */
  .cart-flyout {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: 400px;
    max-width: 100%;
    background: var(--background-primary);
    z-index: var(--z-index-cart-flyout);
    transform: translateX(100%);
    transition: transform 0.3s ease-out;
    display: flex;
    flex-direction: column;
    border-left: 1px solid var(--glow-primary);
    box-shadow: -4px 0 15px rgba(var(--glow-primary-rgb), 0.2);
  }

  .cart-flyout.active {
    transform: translateX(0);
  }

  .cart-flyout__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4);
    border-bottom: 1px solid rgba(var(--glow-primary-rgb), 0.2);
  }

  .cart-flyout__body {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-2) 0;
  }

  .cart-flyout__footer {
    border-top: 1px solid rgba(var(--glow-primary-rgb), 0.2);
    padding: var(--space-4);
    gap: var(--space-4);
    display: flex;
    flex-direction: column;
  }
{% endstyle %}

