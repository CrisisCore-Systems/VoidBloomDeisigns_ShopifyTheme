{% comment %}
  Renders a cyberpunk-styled button
  
  Accepts:
  - text: {String} Button text
  - url: {String} Optional URL to link to
  - class: {String} Optional additional classes
  - disabled: {Boolean} Whether the button is disabled
  
  Usage:
  {% render 'cyber-button', text: 'Add to cart' %}
{% endcomment %}

<div class="cyber-button {{ class }}">
  {% if url %}
    <a href="{{ url }}" class="cyber-button__link">
      <span class="cyber-button__glitch" data-text="{{ text }}"></span>
      <span class="cyber-button__text">{{ text }}</span>
    </a>
  {% else %}
    <button type="button" {% if disabled %}disabled{% endif %} class="cyber-button__button">
      <span class="cyber-button__glitch" data-text="{{ text }}"></span>
      <span class="cyber-button__text">{{ text }}</span>
    </button>
  {% endif %}
</div>

{% style %}
  .cyber-button {
    position: relative;
    display: inline-block;
    min-width: 150px;
    text-align: center;
    margin: var(--space-2) 0;
  }

  .cyber-button__link,
  .cyber-button__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75em 1.5em;
    background: transparent;
    color: var(--text-color);
    font-family: var(--font-heading-family);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.9rem;
    border: 1px solid var(--glow-primary);
    box-shadow: 0 0 5px var(--glow-primary), inset 0 0 5px var(--glow-primary);
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .cyber-button__glitch {
    display: none;
  }

  .cyber-button:hover .cyber-button__link,
  .cyber-button:hover .cyber-button__button {
    background: rgba(var(--glow-primary-rgb), 0.1);
    color: var(--glow-primary);
    box-shadow: 0 0 10px var(--glow-primary), inset 0 0 10px var(--glow-primary);
  }

  .cyber-button:active .cyber-button__link,
  .cyber-button:active .cyber-button__button {
    background: rgba(var(--glow-primary-rgb), 0.2);
  }
{% endstyle %}
