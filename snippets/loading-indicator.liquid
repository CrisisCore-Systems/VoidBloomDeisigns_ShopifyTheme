{% comment %}
  Renders a cyberpunk-styled loading indicator
  
  Usage:
  {% render 'loading-indicator' %}
{% endcomment %}

<div class="loading-indicator" aria-hidden="true">
  <div class="loading-indicator__spinner"></div>
</div>

{% style %}
  .loading-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    min-height: 100px;
  }

  .loading-indicator__spinner {
    width: 40px;
    height: 40px;
    border: 2px solid transparent;
    border-top: 2px solid var(--glow-primary);
    border-right: 2px solid var(--glow-secondary);
    border-bottom: 2px solid var(--glow-accent);
    border-left: 2px solid var(--glow-primary);
    border-radius: 50%;
    animation: loading-spin 1s linear infinite;
    box-shadow: 0 0 15px rgba(var(--glow-primary-rgb), 0.5);
  }

  @keyframes loading-spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
{% endstyle %}
